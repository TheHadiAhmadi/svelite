{
    "name": "svelitecms",
    "version": "0.0.6-next.3",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "npm run build:server && npm run build:client && npm run build:index",
        "build:package": "vite build --config vite.build.config.js",
        "build:client": "vite build --outDir build/client",
        "build:server": "vite build --ssr .svelite/server.js --outDir build/server",
        "build:index": "cp index.js dist"
    },
    "dependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.0.1",
        "express": "^4.18.2",
        "sirv": "^2.0.4",
        "svelte": "^5.0.0-next.36",
        "vite": "^5.1.0-beta.0"
    },
    "exports": {
        ".": {
            "import": "./dist/svelite.js"
        },
        "./vite": {
            "import": "./dist/vite.js"
        },
        "./styles.css": {
            "import": "./dist/styles.css"
        }
    },
    "bin": {
        "svelite": "./bin/svelite.js"
    }
}
