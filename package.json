{
    "name": "svelitecms",
    "version": "0.0.6-next.13",
    "type": "module",
    "bin": {
        "svelite": "bin/svelite.js"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:server && npm run build:client && npm run build:index",
        "build:package": "node build.js",
        "build:client": "vite build --outDir build/client",
        "build:server": "vite build --ssr .svelite/server.js --outDir build/server",
        "build:index": "cp index.js dist",
        "build:components": "cp src/lib/components dist -r"
    },
    "dependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.0.1",
        "express": "^4.18.2",
        "sirv": "^2.0.4",
        "svelte": "^5.0.0-next.37",
        "vite": "^5.1.0-beta.0"
    },
    "exports": {
        ".": {
            "import": "./dist/svelite.js",
            "svelte": "./dist/svelite.js"
        },
        "./components": {
            "import": "./dist/components/index.js",
            "svelte": "./dist/components/index.js"
        },
        "./vite": {
            "import": "./dist/vite.js",
            "svelte": "./dist/vite.js"
        },
        "./client": {
            "import": "./dist/client.js",
            "svelte": "./dist/client.js"
        },
        "./server": {
            "import": "./dist/server.js",
            "svelte": "./dist/server.js"
        }
    }
}
